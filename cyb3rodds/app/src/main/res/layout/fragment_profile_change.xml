<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context="enterprise.minura.cyb3rodds.profile.ProfileChangeFrag">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/black"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/bac"
            android:paddingRight="150dp"
            android:layout_marginTop="33dp"

            />
        <ImageView
            android:id="@+id/btninfo2"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:src="@drawable/informacao"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        >

        <EditText
            android:id="@+id/edfirst"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/edlast"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15dp"/>


        <EditText
            android:id="@+id/edemail"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15dp"/>


        <Spinner
            android:id="@+id/spincountry2"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </Spinner>

        <Button
            android:id="@+id/change"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Change"
            android:background="@drawable/buttonrad"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>
</LinearLayout>
</FrameLayout>
